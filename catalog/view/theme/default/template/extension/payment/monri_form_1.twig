{{ header }}
<div id="error-not-found" class="container">
    <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
            <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
    </ul>
    <div class="row">{{ column_left }}
        {% if column_left and column_right %}
            {% set class = 'col-sm-6' %}
        {% elseif column_left or column_right %}
            {% set class = 'col-sm-9' %}
        {% else %}
            {% set class = 'col-sm-12' %}
        {% endif %}
        <div id="content" class="{{ class }}">{{ content_top }}
            <h1>{{ heading_title }}</h1>
            <p>{{ text_error }}</p>
            <div style="width: 100%; text-align: center; font-size: 25px;">
                Please wait....
            </div>
            <form action="{{ liveurl }}" method="post" id="form_v1">

                <input type="hidden" name="order_number" value="{{ order_number }}"><br>
                <input type="hidden" name="ch_full_name" value="{{ ch_full_name }}"><br>
                <input type="hidden" name="ch_address" value="{{ ch_address }}"><br>
                <input type="hidden" name="ch_city" value="{{ ch_city }}"><br>
                <input type="hidden" name="ch_zip" value="{{ ch_zip }}"><br>
                <input type="hidden" name="ch_country" value="{{ ch_country }}"><br>
                <input type="hidden" name="ch_phone" value="{{ ch_phone }}"><br>
                <input type="hidden" name="ch_email" value="{{ ch_email }}"><br>
                <input type="hidden" name="currency" value="{{ currency }}"><br>
                <input type="hidden" name="amount" value="{{ amount }}"><br>
                <input type="hidden" name="language" value="{{ language }}"><br>
                <input type="hidden" name="transaction_type" value="{{ pikpay_transaction_type }}"><br>
                <input type="hidden" name="order_info" value="{{ order_description }}"><br>
                <input type="hidden" name="authenticity_token" value="{{ authenticity_token }}"><br>
                <input type="hidden" name="digest" value="{{ digest }}"><br>

            </form>

            {{ content_bottom }}</div>
        {{ column_right }}</div>
</div>
{{ footer }}
<!-- Scripta auto submit -->
<script type="text/javascript">
    document.getElementById('form_v1').submit(); // SUBMIT FORM
</script>

